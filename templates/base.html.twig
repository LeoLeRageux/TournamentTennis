<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <script src="https://kit.fontawesome.com/3802068639.js" crossorigin="anonymous"></script>
        <title>{% block title %}Titre (à changer){% endblock %}</title>

    {% block stylesheets %}
		<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
		<link rel="stylesheet" href="{{asset('css/bootstrap.min.css')}}">
  	{% endblock %}

    </head>
    <body>
<nav class="navbar navbar-expand-lg navbar-dark bg-primary">
  <a class="navbar-brand"
  {% if app.user %}
    href="/tournois"
  {% else %}
    href="/"
  {% endif %}
  >
    <img src="{{asset('/image/logo.svg')}}" width="30" height="30" class="d-inline-block align-top" alt="">
    TournamentTennis
  </a>

  <ul class="navbar-nav ml-md-auto">
<div class="row">
         {% block utilisateur %}
         <li class="nav-item active">
            <a class="nav-link" href="{{path('tennis_utilisateur_show',{'id':app.user.id})}}">
            <i class="fas fa-user"></i>  {{ app.user.prenom }} {{ app.user.nom }} </a>
            <span class="sr-only">(current)</span></a>
          </li>

          <li class="nav-item active">
            <a class="nav-link" href="{{path('app_logout')}}">  Déconnexion  </a>
            <span class="sr-only">(current)</span></a>
            </li>
         {% endblock %}
</div>
</nav>

<div class="container-fluid">

		<div class="row" style="margin-top:15px;">
		<div class="col-4">
		</div>
		<div class="col-4">
		<center>{% block titre %}{% endblock %}</center>
		</div>
		<div class="col-4">
		</div>
		</div>
		<div class="row">
		<div class="col-12">
      <div class="card shadow">
         <div class="card-body">
          {% block body %}{% endblock %}
          </div>
		</div>
		</div>
</div>

    {% block javascripts %}
		<script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous"></script>
		<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>
		<script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
		{% endblock %}

    </body>
</html>
