{{ form_start(form) }}

<div class="container-fluid">
	<div class="row">
		<div class="col-md-6">
			<h3>
				Tournoi
			</h3>
		</div>
		<div class="col-md-6">
			<h3>
				Inscriptions
			</h3>
		</div>
	</div>
	<div class="row">
		<div class="col-md-6">

                        <form role="form">

		<div class="form-group">
                        {{ form_label(form.nom,'Nom du tournoi ') }}
                        {{ form_errors(form.nom) }}
                        {{ form_widget(form.nom) }}
		</div>

                <div class="form-group">
                        {{ form_label(form.adresse,'Adresse ') }}
                        {{ form_errors(form.adresse) }}
                        {{ form_widget(form.adresse) }}
                </div>

                <div class="form-group">
                        {{ form_label(form.dateDebutTournoi,'Date de début du tournoi ') }}
                        {{ form_errors(form.dateDebutTournoi) }}
                        {{ form_widget(form.dateDebutTournoi) }}
                </div>

                <div class="form-group">
                        {{ form_label(form.dateFinTournoi,'Date de fin du tournoi ') }}
                        {{ form_errors(form.dateFinTournoi) }}
                        {{ form_widget(form.dateFinTournoi) }}
                </div>

                <div class="form-group">
                        {{ form_label(form.estVisible,'Le tournoi sera-t-il visible ? ') }}
                        {{ form_errors(form.estVisible) }}
                        {{ form_widget(form.estVisible) }}
                        {{ form_help(form.estVisible) }}
                </div>

                <div class="form-group">
                        {{ form_label(form.surface,'Surface des terrains ') }}
                        {{ form_errors(form.surface) }}
                        {{ form_widget(form.surface) }}
                </div>

                <div class="form-group">
                        {{ form_label(form.categorieAge,"Catégorie d'age du tournoi ") }}
                        {{ form_errors(form.categorieAge) }}
                        {{ form_widget(form.categorieAge) }}
                        {{ form_help(form.categorieAge) }}
                </div>

                <div class="form-group">
                        {{ form_label(form.nbSetsGagnants,'Nombre de sets gagnants ')}}
                        {{ form_widget(form.nbSetsGagnants) }}
		</div>

                <div class="form-group">
                        {{ form_label(form.genreHomme,'Genre') }}
                        {{ form_widget(form.genreHomme) }}
                </div>

                <div class="form-group">
                        {{ form_label(form.description,'Description ')}}
                        {{ form_errors(form.description)}}
                        {{ form_widget(form.description)}}
                </div>
		</div>

		<div class="col-md-6">
				<div class="form-group">
                        {{ form_label(form.dateDebutInscriptions,'Date du début des inscriptions ')}}
                        {{ form_errors(form.dateDebutInscriptions)}}
                        {{ form_widget(form.dateDebutInscriptions) }}
				</div>
                <div class="form-group">
                        {{ form_label(form.dateFinInscriptions,'Date de fin des inscriptions ')}}
                        {{ form_errors(form.dateFinInscriptions)}}
                        {{ form_widget(form.dateFinInscriptions) }}
				</div>
                <div class="form-group">
                        {{ form_label(form.inscriptionsManuelles,"Les joueurs peuvent s'inscrire eux-mêmes ")}}
                        {{ form_errors(form.inscriptionsManuelles)}}
                        {{ form_widget(form.inscriptionsManuelles) }}
                        {{ form_help(form.inscriptionsManuelles) }}
				</div>
                <div class="form-group">
                        {{ form_label(form.nbPlaces,'Nombre d’inscrits maximum ')}}
                        {{ form_errors(form.nbPlaces)}}
                        {{ form_widget(form.nbPlaces) }}
				</div>
                <div class="form-group">
                        {{ form_label(form.motDePasse,'Les joueurs doivent saisir ce mot de passe ')}}
                        {{ form_errors(form.motDePasse)}}
                        {{ form_widget(form.motDePasse) }}
                        {{ form_help(form.motDePasse) }}
				</div>
                <div class="form-group">
                        {{ form_label(form.validationInscriptions,'Les inscriptions doivent être validées par l’organisateur ')}}
                        {{ form_errors(form.validationInscriptions)}}
                        {{ form_widget(form.validationInscriptions) }}
                        {{ form_help(form.validationInscriptions) }}
				</div>
                        <button class="btn btn-primary">{{ button_label|default('Créer le tournoi') }}</button>
			</form>



		</div>

	</div>
</div>
{{ form_end(form) }}
