{% extends 'base.html.twig' %}

{% block title %}Créer un tournoi{% endblock %}
{% block titre %}<h1><center>Créer un nouveau tournoi</center></h1>{% endblock %}

{% block stylesheets %}
	{{ parent() }}
  <link id="bsdp-css" href="https://unpkg.com/bootstrap-datepicker@1.9.0/dist/css/bootstrap-datepicker3.min.css" rel="stylesheet">
{% endblock %}

{% block body %}

    {{ include('tennis_tournoi/_form.html.twig') }}

    <a href="{{ path('tennis_tournoi_index') }}"><i class="fas fa-arrow-left"></i> Retour vers la liste des tournois</a>

