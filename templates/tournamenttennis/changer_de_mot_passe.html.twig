{% extends 'base.html.twig' %}

{% block body %}

<div class="container">
  <div class="row -lg-n5">
    <div class=".col-sm- py-3 px-lg-5 border bg-light">
      <div class="form-group">
        <label for="input_psw1">Entrez votre nouveau mot de passe</label>
        <input type="password" class="form-control" id="input_psw1" autocomplete="current-password" placeholder="Nouveau mot de passe">
      </div>
      <div class="form-group">
        <label for="input_psw2">Confirmez votre nouveau mot de passe</label>
        <input type="password" class="form-control" id="input_psw2" autocomplete="current-password" placeholder="Nouveau mot de passe">
      </div>
    </div>
  </div>
    <div class="row">
      <div class="col">
        <p style="color:green;" id="green"></p>
        <p style="color:red;" id="red"></p>
        <button type="button" onclick='btnClick()' class="btn btn-primary">Changer de mot de passe</button>
      </div>
    </div>
</div>

  

  


  <script>
	 function btnClick() {
    if(document.getElementById("input_psw1").value.length > 4){
      if(document.getElementById("input_psw1").value == document.getElementById("input_psw2").value){
         document.getElementById("red").innerHTML = "";
         document.getElementById("green").innerHTML = "Nouveau mot de passe enregistré !";
      } else {
         document.getElementById("green").innerHTML = "";
         document.getElementById("red").innerHTML = "Les deux mots de passe ne concordent pas !";
      }
      } else {
         document.getElementById("red").innerHTML = "Le mot de passe doit faire au moins 5 caractères !";
      }
   }
  </script>
  
{% endblock %}
